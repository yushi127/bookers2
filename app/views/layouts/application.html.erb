<!DOCTYPE html>
<html>
  <head>
    <title>Boockers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>

  <body>
    <% if user_signed_in? %>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>Bookers</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <li><p class="fas fa-home nav-link text-light text-white" > <%= link_to 'Home', user_path(id: current_user.id, class:"text-white" ) %></p></li>
              <li><p class="fas fa-users nav-link text-light"> <%= link_to 'Users', users_path %></p></li>
              <li><p class="fas fa-book-open nav-link text-light"> <%= link_to 'Books', books_path %></p></li>
              <li><p class="fas fa-sign-out-alt nav-link text-light"><%= link_to "logout", destroy_user_session_path, method: :delete %></p></li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <br>
    <% else %>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>Bookers</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <li><p class="fas fa-home nav-link text-light"> <%= link_to "Home", welcome_path %></p></li>
              <li><p class="fas fa-link nav-link text-light"> <%= link_to "About", about_path %></a></li>
              <li><p class="fas fa-user-plus nav-link text-light">  <%= link_to "sign up", new_user_registration_path %></p></li>
              <li><p class="fas fa-sign-in-alt nav-link text-light"> <%= link_to "login", new_user_session_path %></p></li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <br>
    <% end %>
    <%= yield %>
  </body>
</html>
