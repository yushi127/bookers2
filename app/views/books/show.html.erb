<div class="container px-5 px-sm-0">
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerror発生しました
  <% @book.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>
  <p class="notice"><%= notice %></p>
  <div class="row">
    <div class= "col-md-3">
      <%= render 'books/profile', user: @user %>
      <%= render 'books/newbook', book: @booknew %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table width="100%">
         <tr align="center" class= "bordery">
           <th height="40">　</th>
        　 <th>Title</th>
        　 <th>Option</th>
         </tr>
  
          <tr >
            <td  height="40" class="m-1 pr-5 "><%= attachment_image_tag @book.user, :profile_image, :fill, 10, 10, fallback: "no_image.jpg",size:'40x40',class:"marginauto" %><br><span><%= link_to @book.user.name, user_path(@user)%></span></td>
            <td  height="40" class="m-1 pr-5"><%= link_to @book.title , book_path(@book) ,class:"m-1" %></td>
        　　<td height="40" class="m-1 pr-5"><%= @book.body  %></td>
        　　<td> <%= link_to "Edit" , edit_book_path(@book) ,class:"m-1 btn btn-sm btn-success edit_book_19631" %></td>
        　　<td> <%= link_to 'Destroy' , book_path(@book), method: :delete, data:{ confirm: "Are You sure" },class:"m-1 btn btn-sm btn-danger destroy_book_19631"%></td>
        　</tr>
      </table>
    </div>
  </div>
</div>