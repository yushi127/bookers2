<div class="container px-5 px-sm-0">
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerror発生しました
  <% @book.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>
  <p class="notice"><%= notice %></p>
  <div class="row">
    <div class= "col-md-3">
      <%= render 'books/profile', user: @user %>
      <%= render 'books/newbook', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2 class="marginauto">Books</h2>
      <table width="100%">
         <tr align="center" class= "bordery">
           <th height="40">　</th>
        　 <th>Title</th>
        　 <th>Option</th>
         </tr>
         <% @books.each do |book| %>
          <tr >
            <td  height="40" class="m-1 pr-5"><%= attachment_image_tag book.user, :profile_image, :fill, 10, 10, fallback: "no_image.jpg",size:'40x40' %></td>
            <td  height="40" class="m-1 pr-5"><%= link_to book.title , book_path(book) ,class:"m-1" %></td>
        　　<td height="40" class="m-1 pr-5"><%= book.body  %></td>
        　</tr>
         <% end %>
      </table>
    </div>

  </div>
</div>